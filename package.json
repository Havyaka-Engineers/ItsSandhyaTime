{
  "name": "sandhya",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:prod": "NODE_ENV=production npm run build",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "deploy:prod": "npm run build:prod && firebase deploy --only hosting:prod",
    "deploy:dev": "npm run build:dev && firebase deploy --only hosting:dev",
    "typecheck:web": "tsc --noEmit -p tsconfig.app.json --composite false",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck": "npm run typecheck:web && npm run typecheck:node",
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@heroicons/react": "^2.2.0",
    "@mui/icons-material": "^6.1.10",
    "@vimeo/player": "^2.24.0",
    "@xstate/react": "^5.0.0",
    "axios": "^1.7.9",
    "firebase": "^10.14.1",
    "konsta": "^3.1.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "react-player": "^2.16.0",
    "react-router-dom": "^6.27.0",
    "xstate": "^5.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/vimeo__player": "^2.18.3",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "husky": "^8.0.0",
    "postcss": "^8.4.41",
    "prettier": "^3.4.2",
    "pwa-asset-generator": "^6.4.0",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.0",
    "vite-plugin-pwa": "^0.20.5",
    "workbox-window": "^7.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx, js,jsx}": "npm run format"
  }
}
